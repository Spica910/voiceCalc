<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AntiqueCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/antique_primary</item>
        <item name="colorPrimaryVariant">@color/antique_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Text/icons on primary color -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/antique_accent</item>
        <item name="colorSecondaryVariant">@color/antique_accent</item> <!-- Can be same or a darker shade -->
        <item name="colorOnSecondary">@color/black</item> <!-- Text/icons on secondary color -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Window background. -->
        <item name="android:windowBackground">@color/antique_background</item>
        <!-- Default Text Color -->
        <item name="android:textColor">@color/antique_text_color</item>
        <!-- Accent color for controls like checkboxes, radio buttons -->
        <item name="colorAccent">@color/antique_accent</item>
    </style>
</resources>
